$NetBSD: patch-aa,v 1.3 2024/10/11 06:58:02 nia Exp $

Don't hardcode gcc. Use LDFLAGS for linking.

--- src/Makefile.in.orig	2003-04-06 20:22:35.000000000 +0000
+++ src/Makefile.in
@@ -1,4 +1,4 @@
-CC=gcc
+CC=@CC@
 CFLAGS=@CFLAGS@
 INC=-I../include
 INSDIR=@prefix@/bin
@@ -6,13 +6,13 @@ LIBS=@LIBS@
 OBJS=chksniff.o
 
 all:		$(OBJS)
-		$(CC) $(CFLAGS) $(INC) $(OBJS) -o chksniff $(LIBS)
+		$(CC) $(LDFLAGS) $(INC) $(OBJS) -o chksniff $(LIBS)
 
 chksniff.o:	chksniff.c
 		$(CC) $(CFLAGS) $(INC) -c chksniff.c
 
 install:	
-		cp chksniff $(INSDIR)
+		$(BSD_INSTALL_PROGRAM) chksniff ${DESTDIR}$(INSDIR)
 
 uninstall:	
 		rm $(INSDIR)/chksniff
